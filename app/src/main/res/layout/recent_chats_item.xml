<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_card_backg"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/rc_profile_image"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/user_basic_img"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/image_card"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/rc_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:hint="Username"
                android:maxWidth="150dp"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/rc_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:hint="Message"
                android:fontFamily="@font/roboto_light"
                android:maxWidth="200dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/rc_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textSize="12dp"
            android:maxWidth="80dp"
            android:gravity="right"
            android:text="about an hour ago"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>